<h1> My Events </h1>
<h2> My Previous Events </h2>
<table>
  <table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

   <tbody>
    <% @events.each do |event| %>
      <tr>
        <% if event.host == current_user && event.date < Time.now %>
          <td><%= link_to 'show', event %></td><br>
          <td><%= event.name %></td><br>
          <td><%= event.description %></td><br>
        <% end %>
    <% end %>
    </tbody>
</table>
<h2> My Upcoming Events </h2>
<table>
  <table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

   <tbody>
    <% @events.each do |event| %>
      <tr>
        <% if event.host == current_user && event.date > Time.now %>
          <td><%= link_to 'show', event %></td><br>
          <td><%= event.name %></td><br>
          <td><%= event.description %></td><br>
        <% end %>
    <% end %>
    </tbody>
</table>

