<p id="notice"><%= notice %></p>

<h1>Events</h1>

<div>
  <% if !user_signed_in? %>
    <p>
      If You would like to create or view more info on events then please sign in or sign up!
    </p>
  <% end %>
</div>
<h2>Past events from all Users</h2>
<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |event| %>
      <% if event.past? %>
        <tr>
            <td><%= link_to 'Show', event %></td>
            <td><%= event.host.name %></td><br>
            <td><%= event.name %></td><br>
            <td><%= event.description %></td><br>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
<br>
<h2>Upcoming events from all Users</h2>
<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |event| %>
      <% if event.upcoming? %>
        <tr>
            <td><%= link_to 'Show', event %></td>
            <td><%= event.host.name %></td><br>
            <td><%= event.name %></td><br>
            <td><%= event.description %></td><br>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

