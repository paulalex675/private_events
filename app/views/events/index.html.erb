<p id="notice"><%= notice %></p>

<h1>Events</h1>

<div>
  <% if !user_signed_in? %>
    <p>
      If You would like to create or view more info on events then please sign in or sign up!
    </p>
  <% end %>
</div>
<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <% if user_signed_in? %>
          <td><%= link_to 'Show', event %></td>
          <td><%= event.host.name %></td><br>
          <td><%= event.name %></td><br>
          <td><%= event.description %></td><br>
          <% if user_signed_in? && event.host == current_user %>
            <td><%= link_to 'Edit', edit_event_path(event) %></td>
            <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? %>
  <%= render 'my_events' %>
  <%= link_to 'New Event', new_event_path %>
<% end %>