<p id="notice"><%= notice %></p>

<h1>Events</h1>

<div>
  <% if !user_signed_in? %>
    <p>
      If You would like to create or view more info on events then please sign in or sign up!
    </p>
  <% end %>
</div>
<div>
  <% if user_signed_in? %>
    <%= render 'my_events' %>
    <%= link_to 'New Event', new_event_path %>
  <% end %>
</div>
<br>
<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
          <td><%= link_to 'Show', event %></td>
          <td><%= event.host.name %></td><br>
          <td><%= event.name %></td><br>
          <td><%= event.description %></td><br>
      </tr>
    <% end %>
  </tbody>
</table>

