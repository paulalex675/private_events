
<% if @event_attendees.include?(current_user) %>
  <%= link_to "Change of plans, don't want to go", rsvps_path(@event.rsvps.find_by(event_id: @event.id, user_id: current_user.id).id), method: :delete, class: "button is-primary media-right is-pulled-right" %>
<% else %>
  <%= link_to "RSVP", rsvps_path(rsvp: { event_id: @event.id, user_id: current_user.id }), method: :post, class: "button is-primary media-right is-pulled-right" %>
<% end %>