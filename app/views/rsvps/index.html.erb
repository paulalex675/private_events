<p id="notice"><%= notice %></p>

<h1>RSVP's</h1>

<h2>Events I attended</h2>
<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rsvps.each do |rsvp| %>
      <% if rsvp.attendee == current_user && rsvp.event.date < Time.now %>
        <tr>
          <td><%= rsvp.event.name %></td>
          <td><%= link_to 'Cancel attendance', rsvp, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<h2>Events I'm attending in future</h2>
<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rsvps.each do |rsvp| %>
      <% if rsvp.attendee == current_user && rsvp.event.date > Time.now %>
        <tr>
          <td><%= rsvp.event.name %></td>
          <td><%= link_to 'Cancel attendance', rsvp, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

